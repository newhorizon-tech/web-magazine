<h1> New Article </h1>
<%= form_with model: @article, class: 'form' do |form| %>
  <%= form.label :title, 'Title', class: 'form-label' %>
  <%= form.text_field :title, class: 'form-control' %>
  <%= form.label :text, 'Body', class: 'form-label' %>
  <%= form.text_area :text, size: "60x10", class: 'form-control' %>
  <%= form.label :image, 'Image', class: 'form-label' %>
  <%= form.file_field :image, direct_upload: true, class: 'form-control' %>
  <%= form.label :category, 'Category', class: 'form-label' %>
  <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name, multiple: true, prompt: 'Select Categories') %>
  <%= form.submit %>
<% end %>
